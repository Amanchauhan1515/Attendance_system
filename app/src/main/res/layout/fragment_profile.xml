<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="@color/mycolor">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/btnevent"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:src="@drawable/baseline_event_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/somaiya_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timetable"
            android:textColor="@color/somaiya_color"
            android:textSize="40dp"
            app:layout_constraintEnd_toEndOf="@+id/btnevent"

            app:layout_constraintStart_toStartOf="@+id/btnevent"
            app:layout_constraintTop_toBottomOf="@+id/btnevent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>